<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="NIC"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="Name"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="Address"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Phone"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/district"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="E-mail"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="Password"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/et_nic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="  Username"
        android:inputType="textPersonName"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nic"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="  Kaveesha"
        android:inputType="textPersonName"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="  No.24, Araliya road, Colombo7"
        android:inputType="textPersonName"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAddress"
        android:layout_marginStart="140dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="  072-5489072"
        android:inputType="textPersonName"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPhone"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="  sajini@gmail.com"
        android:inputType="textPersonName"
        android:textSize="11pt" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="  1234@fV"
        android:inputType="textPassword"
        android:textSize="11pt" />

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="match_parent"
        android:onClick="btnRegister1"
        android:layout_height="50dp"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textSize="9pt"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>