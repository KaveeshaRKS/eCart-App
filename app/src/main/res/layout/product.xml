<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Product">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="1040dp">

            <ImageSwitcher
                android:id="@+id/image_switcher"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_switcher"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:hint="Name of the Product"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/tv_price_label"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_product_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="price(LKR):"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_price_label2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_product_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/tv_price_label"
                android:gravity="center_vertical"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_product_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:hint="The price"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_price"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="The Description"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tv_desc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="40dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="start"
                android:scrollbars="vertical"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/tv_avail_quantity"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="Available Quantity"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_avail_quantity1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_required_quantity"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_avail_quantity1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="Required Quantity"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tv_required_quantity1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_avail_quantity1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="228dp"
                android:layout_marginTop="18dp"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:ems="10"
                android:textSize="10pt" />

            <Button
                android:id="@+id/see_price"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_required_quantity"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="See Price"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_total_price1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_required_quantity1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:textSize="10pt" />

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/see_price"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Add to Cart"
                android:textSize="10pt" />

        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start"/>


    </androidx.drawerlayout.widget.DrawerLayout>