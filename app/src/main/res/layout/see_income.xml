<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="Year"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/et_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt" />

    <TextView
        android:id="@+id/label_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_year"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="Month"
        android:textSize="9pt" />

    <Spinner
        android:id="@+id/s_month"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_year"
        android:layout_marginStart="130dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt" />

    <Button
        android:id="@+id/btn_see_income"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/s_month"
        android:layout_marginTop="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="SEE INCOME IN LKR"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt" />

    <TextView
        android:id="@+id/tv_see_income"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_see_income"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="The Income will display here!"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="9pt"
        tools:ignore="RtlCompat" />

</RelativeLayout>